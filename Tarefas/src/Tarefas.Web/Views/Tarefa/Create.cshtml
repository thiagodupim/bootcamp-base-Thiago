@model Tarefas.Web.Models.TarefaViewModel

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<form asp-action="Create">    
    @Html.ValidationSummary()

    <div class="form-group">
        <label asp-for="Titulo">@Html.DisplayNameFor(model => model.Titulo)</label>
        @Html.TextBoxFor(model => model.Titulo, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label asp-for="Descricao">@Html.DisplayNameFor(model => model.Descricao)</label>
        @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control" })
   
    </div>
        
    <input type="submit" class="btn btn-primary" value="Criar" />
        
</form>